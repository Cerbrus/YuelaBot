<div class="container mx-auto">
  <div class="row py-2">
    <div class="col">
      <%= render DataListComponent.new(
          header: "Quick Stats",
          subtitle: "little itty bitty numbers",
          data: [
              ["User Commands", UserCommand.count],
              ["Game Keys", GameKey.count],
              ["User Reactions", UserReaction.count],
              ["Birthday", Birthday.count],
              ["Afk", Afk.count]
          ]
      ) %>
    </div>
  </div>
  <div class="row py-2">
    <div class="col">
      <%= render PaperComponent.new do %>
        <%= render AfkButtonComponent.new %>
      <% end %>
    </div>
  </div>
</div>
